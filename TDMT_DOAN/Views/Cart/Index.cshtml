@{
    ViewBag.Title = "Index";
}

@using TDMT_DOAN.Models;

<div class="shopping_cart">
    <div class="cart_title">Giỏ hàng</div>
    <div class="cart_details">
        @if (Model != null)
        {
                  <div>@Model.Count sản phẩm <br /></div>
            string tongtien = String.Format("{0:0,0}", ViewBag.summoney);
        <span class="border_cart"></span> Tổng: <span class="price">@tongtien VNĐ</span>
        }
        else
        {
            <div> 0 sản phẩm <br /></div>
                 
                <span class="border_cart"></span> Tổng: <span class="price">@ViewBag.summoney VNĐ</span>
        }

    </div>
    <div class="cart_icon"><a href="@Url.Action("CartContent","Cart")" title="header=[Xem giỏ hàng] body=[&nbsp;] fade=[on]"><img src="@Url.Content("~/Content/images/shoppingcart.png")" alt="" width="48" height="48" border="0" /></a></div>
</div>
