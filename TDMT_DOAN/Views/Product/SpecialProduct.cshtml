@model TDMT_DOAN.Models.ViewModels.SpecialProductViewModel
@{
    ViewBag.Title = "SpecialProduct";
}

<div class="border_box">
    <div class="product_title"><a href="@Url.Action("Details", "Product", new { id = Model.specialproduct.MA})">@Model.specialproduct.TEN</a></div>
    <div class="product_img"><a href="@Url.Action("Details", "Product", new { id = Model.specialproduct.MA})"><img width="100" height="100" src="@Url.Content("~/Content/images/" + Model.specialproduct.HINHANH)" alt="" border="0" /></a></div>
    
        
     @if (Model.promotion != 0)
    {
        string dongiaban = String.Format("{0:0,0}", Model.specialproduct.DONGIABAN);
        string giamgia = String.Format("{0:0,0}", Model.promotion); 
        <div class="prod_price"><span class="reduce">@dongiaban</span> <span class="price">@giamgia</span></div>
    }
    else
    {
        string dongiaban = String.Format("{0:0,0}", Model.specialproduct.DONGIABAN);
        <div class="prod_price"><span class="price">@dongiaban</span></div>
    }
   
   
</div>

