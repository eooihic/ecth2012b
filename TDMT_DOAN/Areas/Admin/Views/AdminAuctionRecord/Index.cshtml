@model List<TDMT_DOAN.Models.BANGGHIDAUGIA>

@{
    ViewBag.Title = "Index";
}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    ĐẤU GIÁ
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <span>
                                @Html.ActionLink("Thêm bản ghi đấu giá mới", "Create")
                            </span>
                            <thead>
                                <tr>
                                    <th>Mã</th>
                                    <th>Nhà cung cấp</th>
                                    <th>Sản phẩm</th>
                                    <th>Giá</th>
                                    <th>Số lượng</th>
                                    <th>Ngày bắt đầu</th>   
                                    <th>Ngày kết thúc</th>
                                    <th>Hiệu chỉnh</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.MA</td>
                                        <td>@item.NHACUNGCAP</td>
                                        <td>@item.SANPHAM</td>
                                        <td>@item.GIA</td>
                                        <td>@item.SOLUONG</td>
                                        <td>@item.NGAYBATDAU</td>
                                        <td>@item.NGAYKETTHUC</td>
                                        <td>
                                            @Html.ActionLink("Sửa", "Edit", new { id = @item.MA })
                                            @Html.ActionLink("Xóa", "Delete", new { id = @item.MA })
                                            @Html.ActionLink("Chọn", "Choosen")
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>



