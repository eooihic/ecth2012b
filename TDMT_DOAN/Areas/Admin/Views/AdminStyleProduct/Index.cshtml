@model List<TDMT_DOAN.Models.LOAISANPHAM>

@{
    ViewBag.Title = "Index";
}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    LOẠI SẢN PHẨM
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <span>
                                @Html.ActionLink("Thêm sản phẩm mới", "Create")
                            </span>
                            <thead>
                                <tr>
                                    <th>Mã Loại</th>
                                    <th>Loại Sản Phẩm</th>
                                    <th>Sản Phẩm Bán</th>
                                    <th>Hiệu chỉnh</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.MA</td>
                                        <td>@item.TEN</td>
                                        <td>@(item.SANPHAMBAN.GetValueOrDefault() ? "Có" : "Không")</td>
                                        <td>
                                            @Html.ActionLink("Sửa", "Edit", new { id = @item.MA })
                                            @Html.ActionLink("Xóa", "Delete", new { id = @item.MA })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>



