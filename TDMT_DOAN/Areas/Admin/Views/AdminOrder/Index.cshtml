@model List<TDMT_DOAN.Models.DONHANG>

@{
    ViewBag.Title = "Index";
}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    DANH SÁCH ĐƠN HÀNG
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <span>
                                @Html.ActionLink("Thêm đơn hàng mới", "Create")
                            </span>
                            <thead>
                                <tr>
                                    <th>Mã</th>
                                    <th>Tổng tiền</th>
                                    <th>Ngày đặt hàng</th>
                                    <th>Ngày nhận hàng</th>
                                    <th>Tên người nhận</th>
                                    <th>Địa chỉ nhận</th>
                                    <th>Điện thoại người nhận</th>
                                    <th>Tình trạng</th>
                                    <th>Hiệu Chỉnh Thông Số</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    var status = ((TDMT_DOAN.Areas.Admin.Models.StatusOrderModel)ViewBag.status);                                    
                                    <tr>
                                        <td>@item.MA</td>
                                        <td>@item.TONGTIEN (VND)</td>
                                        <td>@item.NGAYDATHANG</td>
                                        <td>@item.NGAYNHANHANG</td>
                                        <td>@item.TENNGUOINHAN</td>
                                        <td>@item.DIACHINHAN</td>
                                        <td>@item.DIENTHOAINGUOINHAN</td>
                                        <td>@status.GetStatusOrderByID((int)@item.TRANGTHAI)</td>
                                        <td> 
                                            @Html.ActionLink("Sửa", "Edit", new { id = @item.MA })
                                            @Html.ActionLink("Xóa", "Delete", new { id = @item.MA })
                                        </td>
                                    </tr>
                                    
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>



