                                            @Html.EditorFor(model => model.DIENTHOAINGUOINHAN, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.DIENTHOAINGUOINHAN, "", new { @class = "text-danger" })
