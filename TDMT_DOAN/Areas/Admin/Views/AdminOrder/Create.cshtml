                                            @Html.ValidationMessageFor(model => model.NGAYDATHANG, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.NGAYNHANHANG, htmlAttributes: new { @class = "control-label col-md-2" })
