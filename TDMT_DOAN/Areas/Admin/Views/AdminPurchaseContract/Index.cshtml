@model List<TDMT_DOAN.Models.HOPDONGMUAHANG>

@{
    ViewBag.Title = "Index";
}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    HỢP ĐỒNG MUA HÀNG
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <span>
                                @Html.ActionLink("Thêm hợp đồng mua hàng mới", "Create")
                            </span>
                            <thead>
                                <tr>
                                    <th>Mã hợp đồng</th>
                                    <th>Nhà cung cấp</th>
                                    <th>Sản phẩm</th>
                                    <th>Số lượng tồn kho tối thiểu</th>
                                    <th>Thời gian giao hàng chấp nhận</th>
                                    <th>Thời gian kí</th>
                                    <th>Thời gian hợp tác</th>
                                    <th>Thời gian chuyển tiền</th>
                                    <th>Số lượng giao hàng</th>
                                    <th>Link Web API</th>
                                    <th>Hiệu Chỉnh Thông Số</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.MAHOPDONG</td>
                                        <td>@item.NHACUNGCAP</td>
                                        <td>@item.SANPHAM</td>
                                        <td>@item.SOLUONGTONKHOTOITHIEU</td>
                                        <td>@item.THOIGIANGIAOHANGCHAPNHAN</td>
                                        <td>@item.THOIGIANKI</td>
                                        <td>@item.THOIGIANHOPTAC</td>
                                        <td>@item.THOIGIANCHUYENTIEN</td>
                                        <td>@item.SOLUONGGIAOHANG</td>
                                        <td>@item.LINKWEBAPI</td>
                                        <td> 
                                            @Html.ActionLink("Sửa", "Edit", new { id = @item.MAHOPDONG })
                                            @Html.ActionLink("Xóa", "Delete", new { id = @item.MAHOPDONG })
                                        </td>
                                    </tr>
                                    
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>



