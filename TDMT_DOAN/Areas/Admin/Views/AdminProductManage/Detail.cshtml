@model TDMT_DOAN.Models.SANPHAM
@{
    ViewBag.Title = "Detail";
}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    XÓA SẢN PHẨM
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <span>
                                @Html.ActionLink("Trở về danh mục chính", "Index", "AdminProductManage");
                            </span>
                            <thead>
                                <tr>
                                    <th>Mã</th>
                                    <th>Tên</th>
                                    <th>Đơn Giá Mua</th>
                                    <th>Đơn Giá Bán</th>
                                    <th>Hình Ảnh</th>
                                    <th>Mô Tả</th>
                                    <th>Số Lượng</th>
                                    <th>Loại Sản Phẩm</th>
                                    <th>Sản Phẩm Mới</th>
                                    <th>Nhà Sản Xuất</th>
                                    <th>Sản Phẩm Bán Chạy</th>
                                    <th>Sản Phẩm Bán</th>
                                    <th>Mã Khuyến Mãi</th>
                                </tr>
                            </thead>
                            <tbody>
                                var stylepro = ((TDMT_DOAN.Areas.Admin.Models.StyleProductModel)ViewBag.style);
                                var producer = ((TDMT_DOAN.Areas.Admin.Models.ProducerModel)ViewBag.producer);
                                    <tr>
                                        <td>@Model.MA</td>
                                        <td>@Model.TEN</td>
                                        <td>@Model.DONGIAMUA</td>
                                        <td>@Model.DONGIABAN</td>
                                        <td>@Model.HINHANH</td>
                                        <td>@Model.MOTA</td>
                                        <td>@Model.SOLUONG</td>
                                        <td>@stylepro.GetStyleProductByID((int)@Model.LOAISANPHAM)</td>
                                        <td>@(Model.SANPHAMMOI.GetValueOrDefault() ? "Có" : "Không")</td>
                                        <td>@producer.GetProducerByID((int)@Model.NHASANXUAT)</td>
                                        <td>@(Model.SANPHAMBANCHAY.GetValueOrDefault() ? "Có" : "Không")</td>
                                        <td>@(Model.SANPHAMBAN.GetValueOrDefault() ? "Có" : "Không")</td>
                                        <td>@Model.MAKHUYENMAI</td>
                                    </tr>
                            </tbody>
                        </table>
                        <div>
                            <div>
                                @Html.ActionLink("Xóa", "Delete", "AdminProductManage")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

