@model List<TDMT_DOAN.Models.SANPHAM>

@{
    ViewBag.Title = "Index";
}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    DANH SÁCH SẢN PHẨM
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <span>
                                @Html.ActionLink("Thêm sản phẩm mới", "Create")
                            </span>
                            <thead>
                                <tr>
                                    <th>Mã</th>
                                    <th>Tên</th>
                                    <th>Đơn Giá Mua</th>
                                    <th>Đơn Giá Bán</th>
                                    <th>Hình Ảnh</th>
                                    <th>Mô Tả</th>
                                    <th>Số Lượng</th>
                                    <th>Loại Sản Phẩm</th>
                                    <th>Sản Phẩm Mới</th>
                                    <th>Nhà Sản Xuất</th>
                                    <th>Sản Phẩm Bán Chạy</th>
                                    <th>Sản Phẩm Bán</th>
                                    <th>Mã Khuyến Mãi</th>
                                    <th>Đang đấu giá</th>
                                    <th>Hiệu Chỉnh Thông Số</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    var stylepro = ((TDMT_DOAN.Areas.Admin.Models.StyleProductModel)ViewBag.style);
                                    var producer = ((TDMT_DOAN.Areas.Admin.Models.ProducerModel)ViewBag.producer);
                                    <tr>
                                        <td>@item.MA</td>
                                        <td>@item.TEN</td>
                                        <td>@item.DONGIAMUA</td>
                                        <td>@item.DONGIABAN</td>
                                        <td>@item.HINHANH</td>
                                        <td>@item.MOTA</td>
                                        <td>@item.SOLUONG</td>
                                        <td>@stylepro.GetStyleProductByID((int)@item.LOAISANPHAM)</td>
                                        <td>@(item.SANPHAMMOI.GetValueOrDefault() ? "Có" : "Không")</td>
                                        <td>@producer.GetProducerByID((int)@item.NHASANXUAT)</td>
                                        <td>@(item.SANPHAMBANCHAY.GetValueOrDefault() ? "Có" : "Không")</td>
                                        <td>@(item.SANPHAMBAN.GetValueOrDefault() ? "Có" : "Không")</td>
                                        <td>@item.MAKHUYENMAI</td>
                                        <td>@(item.DAUGIA.GetValueOrDefault() ? "Có" : "Không")</td>
                                        <td> 
                                            @Html.ActionLink("Sửa", "Edit", new { id = @item.MA })
                                            @Html.ActionLink("Xóa", "Delete", new { id = @item.MA })
                                        </td>
                                    </tr>
                                    
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>



